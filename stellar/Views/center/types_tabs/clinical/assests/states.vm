			$Controller.feilds("select","{'objectName':'arm_states[$i]', 'model_prop':'yes_no', 'value':'$!ddi.yes_no', 'select_options':'Yes=>yes,No=>no'}")

				$Controller.feilds("hidden","{'objectName':'arm_states[$i]', 'model_prop':'id', 'value':'$!ddi.id' }")
				
				$Controller.feilds("select","{'objectName':'arm_states[$i]', 'model_prop':'substance', 'value':'$!ddi.substance', 'select_options':'$substances_list'}")


			$Controller.feilds("select","{'objectName':'arm_states[$i]', 'model_prop':'yes_no', 'value':'$!ddi.yes_no', 'select_options':'Yes=>yes,No=>no'}")
			
			$Controller.feilds("text","{'objectName':'arm_states[$i]', 'model_prop':'dose_amount', 'value':'$!ddi.dose_amount', 'html_attr':' style=\"width:100%\" '}")
			
			#set($dis = $!ddi.descriptions.Replace("'","\'"))
			$Controller.feilds("textarea","{'objectName':'interactions[$i]', 'model_prop':'descriptions', 'value':'$dis', 'html_attr':' rows=\"1\" ', 'placeholder':'Describe the interaction between the two drugs'}")-->
			</td>
			<td> #if($viewonly) #else <a href="#" class="button xsmall crimson defocus removal"><i class="icon-remove" title="Remove"></i></a> #end	</td>
		</tr>
			

	</tbody>
</table>
