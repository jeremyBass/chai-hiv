						#end
					#end
				#end	
			#end
			<a href="#" id="addDrugForm"><i class="icon-plus"></i> Add a drug form</a>
		</ul>
<div>
			#if($item.drugs)

				#foreach($dose in $dose_form)
					#set($k=1)
					#set($j=0)
					#foreach($drug in $!item.drugs)
						#if($drug.dose_form==$dose.alias)
							#if($k==1)
