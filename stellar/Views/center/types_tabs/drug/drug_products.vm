								<table width="100%" class="drpro_table display" ellspacing="0">
									<thead><tr><th>Amt.</th><th>Manufacure</th><th>Actions</th></tr></thead>
									<tfoot><tr><th></th><th></th><th></th></tr></tfoot>
									<tbody>
									
							#end
								<tr>
								
									<td>
										${drug.label_claim}
										<input type="hidden" name="item.drugs[${k}].baseid" value="${drug.baseid}" class="drug_item list_item"/>
										<input type="hidden" name="item.drugs[${k}].attached" value="true" class="drug_item list_item"/>
									</td>
									<td>${drug.manufacturer}</td>
									<td><a href="#" class="button xsmall crimson defocus removal"><i class="icon-remove" title="Remove"></i></a></td>
						
								</tr>
							#set($k=$k+1)
							#set($j=$j+1)
						#end
					#end
