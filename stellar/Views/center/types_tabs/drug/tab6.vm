<ul class="grid col-one-half mq2-col-full full-input">
	#* sra *#
		<li>
			#set($daval ="")
				#set($daval = $!item.sra)
			#feild_selectinput($type "sra" $daval $!sras  "" "taxed" "")
		</li>	
	#* sra_approval_status *#
		<li>
		
			<script>//move on clean up
			//todo
				$(function() {
					$("[name^='item.sra_approval_status']").on("change",function () {
						var val=$(this).val();
						if(val=="approved" ){
							$(this).next(".sra_approval_date").show();
						}else{
							$(this).next(".sra_approval_date").hide();
							$(this).next(".sra_approval_date").find("input").val("");
						}
					});
				});
			</script>
			#set($daval ="")
				#set($daval = $!item.sra_approval_status)
			#feild_selectinput($type "sra_approval_status" $daval $!sra_approval_statuss  "" "" "")
		#* sra_approval_date *#
			 <div class="sra_approval_date" #if($!item.sra_approval_status!="approved")style="display:none;"#end >
				#set($daval ="")
				#set($daval = "$!{item.sra_approval_date}")
				#feild_textinput("$type" "sra_approval_date" $daval "" "MM/DD/YYYY" "" " rel='date' ")
			 </div>
		</li>				  
</ul>