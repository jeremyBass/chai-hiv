					if(val!="Failed")$(this).closest("li").nextAll().show();
					if(val=="Succeeded" || val=="Failed"){
						$(this).next(".clin_date").show();
					}else{
						$(this).next(".clin_date").hide();
						$(this).next(".clin_date").find("input").val("");
					}
				});
			});
		</script>
