<ul class="grid col-one-half mq2-col-full full-input">				  
#* label_claim *#
	<li>
		$Controller.feilds("textinput","$type","label_claim", $!item.label_claim ,"","","","")
	</li>				  
#* dosing *#
	<li>
		#set($daval ="")
				#set($daval = $!item.dosing)
		#feild_selectinput($type "dosing" $daval "" "taxed" "")
	</li>				  
#* dose_form *#
	<li>
		#set($daval ="")
				#set($daval = $!item.dose_form)
		#feild_selectinput($type "dose_form" $daval $!dose_forms  "" "taxed" "")
	</li>				  
#* route_of_administration *#
	<li>
		$Controller.feilds("textinput","$type","route_of_administration", $!item.route_of_administration ,"","","","")
	</li>
#* frequency *#
	<li>
		$Controller.feilds("select","$type","frequency", $!item.frequency , $frequencys,"","","taxed","")
	</li>
#* pill_burden *#
	<li>
		$Controller.feilds("textinput","$type","pill_burden", $!item.pill_burden ,"","","","")
	</li>
</ul>

<ul class="grid col-one-half mq2-col-full full-input"> 
#* inactive_ingredients *#
