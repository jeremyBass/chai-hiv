<article class="grid col-full">

	<h2 id="header_title">Drug Substances #parse("center/assests/display_pub.vm") #if(!$skiplayout && !$viewonly)<a href="substance.castle" class="button  xl right"><i class="icon-plus blue" title="Add"></i> New</a>#end</h2>
		
	<table cellpadding="0" cellspacing="0" border="0" class="display datagrid" id="data" width="100%">
		<thead>
			<tr>
				<th width="15%">CAS</th>
				<th width="15%">Abbreviated</th>
				<th class="sorting_asc">Name</th>
				<th width="20%">action</th>
			</tr>
		</thead>
		<tbody>
		#foreach($item in $items)
			<tr class="#if($velocityCount%2<1)even #else odd #end rec_$item.record_id" data-baseid="$item.baseid">
				<td>#if($item.cas_reg_number)$!item.cas_reg_number#else -- #end</td>
				<td>#if($item.abbreviated)$!item.abbreviated#else -- #end</td>
				<td>$!postingService.get_taxonomy($item.generic_name).name</td>
				<td>
					#if($viewonly)
						<a href="substance.castle?id=$item.baseid" class="button small">View</a>
					#else
						#if(!$skiplayout)<a href="substance.castle?id=$item.baseid" class="button small">Edit</a> | <a href="remove_substance.castle?id=$item.baseid" class="button xsmall crimson defocus deletion">Remove</a>#else<a href="#ADD" class="additem button med">Add</a>#end
					#end
				</td>
			</tr>
		#end
		</tbody>
		<tfoot>
	</table>
	
	<hr/>
	
	<h3 id="header_title">DDI substances only  #parse("center/assests/display_pub.vm")  #if(!$skiplayout && !$viewonly)<a href="substance.castle?ddi_only=true" class="button  xl right"><i class="icon-plus blue" title="Add"></i> New</a>#end</h3>
	<table cellpadding="0" cellspacing="0" border="0" class="display datagrid" id="data" width="100%">
		<thead>
			<tr>
				<th width="15%">CAS</th>
				<th width="15%">Abbreviated</th>
				<th class="sorting_asc">Name</th>
				<th width="20%">action</th>
			</tr>
		</thead>
		<tbody>
		#foreach($item in $ddi_only)
			<tr class="#if($velocityCount%2<1)even #else odd #end rec_$item.record_id" data-baseid="$item.baseid">
				<td>#if($item.cas_reg_number)$!item.cas_reg_number#else -- #end</td>
				<td>#if($item.abbreviated)$!item.abbreviated#else -- #end</td>
				<td>$!postingService.get_taxonomy($item.generic_name).name</td>
				<td>
					#if($viewonly)
						<a href="substance.castle?id=$item.baseid" class="button small">View</a>
					#else
						#if(!$skiplayout)<a href="substance.castle?id=$item.baseid" class="button small">Edit</a> | <a href="remove_substance.castle?id=$item.baseid" class="button xsmall crimson defocus deletion">Remove</a>#else<a href="#ADD" class="additem button med">Add</a>#end
					#end
				</td>
			</tr>
		#end
		</tbody>
		<tfoot>
	</table>	
	
	
	
	
</article>