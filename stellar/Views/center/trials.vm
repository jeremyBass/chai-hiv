<article class="grid col-full">
	<h2 id="header_title">
    Clinical Trials #parse("center/assests/display_pub.vm") #if(!$skiplayout && !$viewonly)<a href="trial.castle" class="button  xl right"><i class="icon-plus blue" title="Add"></i> New</a>#end</h2>
		
	<table cellpadding="0" cellspacing="0" border="0" class="display datagrid" id="data" width="100%">
		<thead>
			<tr>
				<th width="15%">Record ID</th>
				<th>Acronym</th>
				<th width="20%">action</th>
			</tr>
		</thead>
		<tbody>
		#foreach($item in $items)
			<tr class="#if($velocityCount%2<1)even #else odd #end rec_$item.baseid" data-baseid="$item.baseid">
				<td>#if($item.baseid)$!item.baseid#else -- #end</td>
				<td>#if($item.acronym)$!item.acronym#else -- #end</td>
				<td>
					#if($viewonly)
						<a href="trial.castle?id=$item.baseid" class="button small">View</a>
					#else
						#if(!$skiplayout)<a href="trial.castle?id=$item.baseid" class="button small">Edit</a> | <a href="remove_trial.castle?id=$item.baseid" class="button xsmall crimson defocus deletion">Remove</a>#else<a href="#ADD" class="additem button med">Add</a>#end
					#end
				</td>
			</tr>
		#end
		</tbody>
		<tfoot>
	</table>
</article>