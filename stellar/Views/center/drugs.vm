<article class="grid col-full">
	
	<h2 id="header_title">	#if($published==false && !$trashlist)Draft 
	#elseif(!$trashlist)Published 
	#else
	<span style="color: rgb(118, 10, 11); ">Trashed </span>
	#end
	Drug Products #parse("center/assests/display_pub.vm") 
	#*
	#if(!$skiplayout && !$viewonly)<a href="drug.castle" class="button xl right"><i class="icon-plus blue" title="Add"></i> New</a>#end
		*#
		</h2>
		#if(!$skiplayout && !$viewonly)
		<p><b>NOTE:</b> You Create Drug products from Family.</p>
		#end
	<table cellpadding="0" cellspacing="0" border="0" class="display datagrid" id="data" width="100%">
		<thead>
			<tr>
				<th width="15%">Form</th>
				<th width="15%">Label claim</th>
				<th width="15%">Family</th>
				<th class="sorting_asc">Name (brand name)</th>
				<th width="15%">Manufacturer</th>
				<th width="20%">action</th>
			</tr>
		</thead>
		<tfoot>
			<tr>
				<th width="15%"></th>
				<th width="15%"></th>
				<th width="15%"></th>
				<th></th>
				<th width="15%"></th>
				<th width="20%"></th>
			</tr>
		</tfoot>
		<tbody>
		#foreach($item in $items)
			#set($name = false)
			#set($taxedname = false)
			#set($manufacturer = false)
			#set($fam_sub_code = "")
		
#capturefor(fam_sub_code)


#foreach($sub in  $item.families.substances)
$sub.abbreviated
#between
<em>:</em>
#end

#end	
		
		
		
		
			<tr class="#if($velocityCount%2<1)even #else odd #end rec_$item.record_id" data-baseid="$item.baseid">
				<td>#if($!taxonomyService.get_taxonomy($!item.dose_form).name) $!taxonomyService.get_taxonomy($!item.dose_form).name #else - #end</td>
				
				<td>#if($!item.label_claim) $!item.label_claim #else - #end</td>
			
				<td>#if($!fam_sub_code.trim()!="") $!fam_sub_code #else <em><b>orphaned</b></em> #end</td>
				
				#set($name = $item.get_named())
				#set($taxedname = $!postingService.get_taxonomy($name).name)
				<td>#if($taxedname)$taxedname#else #if($name!="")$name#else -- #end #end</td>
				
				#set($manufacturer = $!postingService.get_taxonomy($item.manufacturer).name)
				<td>#if($manufacturer)$!manufacturer #else - #end</td>
				
				
				<td>
					#if($viewonly)
						<a href="drug.castle?id=$item.baseid" class="button small">View</a>
					#else
						#if(!$skiplayout)
						<a href="drug.castle?id=$item.baseid" class="button small">Edit</a> 
							#if(!$trashlist) | <a href="remove_drug.castle?id=$item.baseid" class="button xsmall crimson defocus deletion">Remove</a> #end
							#*| <a href="copydrug.castle?id=$item.baseid&name=#if($taxedname)$taxedname#else$name#end" class="button xsmall">Copy</a>#else<a href="#ADD" class="additem button med">Add</a>*#
						#else

						<a href="#ADD" class="additem button med">Add</a>
						
						
						#end 
					#end
				</td>
			</tr>
		#end
		</tbody>
		<tfoot>
	</table>
</article>